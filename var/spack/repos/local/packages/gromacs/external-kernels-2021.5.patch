+
+    # Propagate the new local value to the parent scope
+    set(SIMD_KERNEL_LIBRARIES "${SIMD_KERNEL_LIBRARIES}" PARENT_SCOPE)
+endfunction()
+
+gmxManageSimdKernelLibraries()
