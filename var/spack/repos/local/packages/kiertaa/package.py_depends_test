from spack.package import *

class Kiertaa(Package):

    has_code = False

    version('1.0.0b')

    ### for "ct_f-rmr32.py"
    extends("python")
    depends_on('python@3:')
    depends_on('py-mpi4py@3.1.4:', type=('build', 'run'))

#     def setup_build_environment(self, env):
