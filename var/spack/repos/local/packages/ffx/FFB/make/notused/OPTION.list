#######################################################################
## option for HI-UX/MPP on C-CUT 1024PE SR8000
#######################################################################
# Compilers and Option flags for HI-UX/MPP on C-CUT 128-Node SR8000 
CPP  = /lib/cpp
CCOM = cc
POPT = -DERR7 -P -C
COPT = -A a
FCOM = f90

FOPT = -parallel -64 -W0,"opt(o(ss)),pvec(diag(1)),mp(procnum(8),diag(2))"

# Locations of include file(s) and library file(s) for HI-UX/MPP
INCDIR = /usr/mpi/include
LIBDIR = /usr/mpi/lib/

#######################################################################
## option for HI-UX/MPP on C-CUT 1024PE SR8000  (DOUBLE PRECISION MODE)
#######################################################################
# Compilers and Option flags for HI-UX/MPP on C-CUT 128-Node SR8000 
CPP  = /lib/cpp
CCOM = cc
POPT = -DERR7 -DPRECEXP -P -C
COPT = -A a
FCOM = f90
FOPT = -parallel -64 -W0,"opt(o(ss)),pvec(diag(1)),mp(procnum(8),diag(2)),langlvl(precexp(4),precexpio(0))"
# Locations of include file(s) and library file(s) for HI-UX/MPP
INCDIR = /usr/mpi/include
LIBDIR = /usr/mpi/lib/

#######################################################################
## option for HP-UX
#######################################################################
# Compilers and Option flags for HP-UX 
CPP  = /lib/cpp
CCOM = cc
POPT = -DERR7 -P
COPT = -A a
FCOM = fort77
FOPT = +O4
# Locations of include file(s) and library file(s) for HP-UX
INCDIR = /usr/local/mpi/include
LIBDIR = /usr/local/mpi/lib/hmpp2/cml

# Note: "f77" command, which invokes the HP-UX FORTRAN77 compiler,
#      recognizes argument "-L" as a listing option. "fort77" command
#      provides a POSIX-compliant interface to the HP-UX FORTRAN77
#      compiler, and therefore is used here.


