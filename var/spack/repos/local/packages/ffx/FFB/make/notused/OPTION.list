#######################################################################
## option for INTEL-fortran Compiler
#######################################################################
CPP  = /lib/cpp
CCOM = icc
POPT = -P -traditional-cpp -Dcputime
COPT =
FCOM = ifort
FOPT = -O3 -convert big_endian -mcmodel=large -shared-intel
# Locations of include file(s) and library file(s)
INCDIR = /usr/local/openmpi-1.3.3-intel64-11.0.081/include
LIBDIR = /usr/local/openmpi-1.3.3-intel64-11.0.081/lib

#######################################################################
## HA8000 system T2K (TOKYO-UNIV.) FLAT-MPI
#######################################################################
CPP   = /usr/bin/cpp
CCOM  = cc -64
AROPT = -64
POPT  = -P -C -traditional -Dcputime
COPT  = -64
FCOM  = /opt/mpich-mx/bin/mpif90
FOPT  =       -codemodel=medium -dynamic -Oss -noparallel -hf95
# Locations of include file(s) and library file(s)
INCDIR  = /usr/local/mpi/include
LIBDIR  = /usr/local/mpi/lib/hmpp2/cml


#######################################################################
## option for AIX
#######################################################################
# Compilers and Option flags for AIX 
CPP  = /lib/cpp
CCOM = cc
POPT = -P
COPT =
FCOM = f77
FOPT = -O3 -qtune=pwr2
# Locations of include file(s) and library file(s) for AIX
INCDIR = /usr/local/mpi/include
LIBDIR  = /usr/local/mpi/lib/hmpp2/cml

#######################################################################
## option for HI-UX
#######################################################################
# Compilers and Option flags for HI-UX 
CPP  = /lib/cpp
CCOM = cc
POPT = -DERR7 -P -C
COPT = -A a
FCOM = f90
FOPT = -W0,"opt(O(s),prefetch(1))"
# Locations of include file(s) and library file(s) for HI-UX
INCDIR = /usr/local/mpi/include
LIBDIR  = /usr/local/mpi/lib/hmpp2/cml


#######################################################################
## option for HI-UX/MPP on C-CUT 1024PE SR2201
#######################################################################
# Compilers and Option flags for HI-UX/MPP on C-CUT 1024PE SR2201
CPP  = /lib/cpp
CCOM = cc
POPT = -DERR7 -P -C
COPT = -A a
FCOM = f90
FOPT = -W0,"opt(O(s),fold(2)),pvec(diag(1))"
# Locations of include file(s) and library file(s) for HI-UX/MPP
INCDIR = /usr/mpi/include
