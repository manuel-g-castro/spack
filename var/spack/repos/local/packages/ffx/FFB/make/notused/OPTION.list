#######################################################################
## option for FX-10
#######################################################################
#OPT = -Dcputime -DUSE_TIMER -DUSE_BARRIER -DUSE_DETAIL
 OPT = -Dcputime

CPP  = /usr/bin/cpp
POPT = -P -traditional-cpp ${OPT}

CCOM = mpifccpx
COPT = -Kvisimpact,ocl ${OPT} -Qt

FCOM = mpifrtpx
FOPT = -Kvisimpact,ocl ${OPT} -Qt -Cpp

LINK = mpiFCCpx
LOPT = --linkfortran -Kvisimpact ${OPT}

LIBDIR = ${MPI_HOME}/lib64
INCDIR = ${MPI_HOME}/include/mpi/fujitsu/

